{
  "name": "finance-app",
  "private": true,
  "description": "The Minimal House Remix Stack to setup Remix with minimal typsescript, tailwind, linting, and formatting. Worry about storage, testing, or deployment later.",
  "license": "MIT",
  "sideEffects": false,
  "scripts": {
    "start": "remix-serve dist",
    "lint": "eslint .",
    "build": "run-s build:*",
    "build:css": "npm run generate:css -- --minify",
    "build:remix": "remix build",
    "dev": "run-p dev:*",
    "dev:css": "npm run generate:css -- --watch",
    "dev:remix": "remix dev",
    "generate:css": "npx tailwindcss -o ./app/tailwind.css",
    "vercel-build": "npm run db:migrate && npm run build",
    "db:migrate": "prisma migrate deploy"
  },
  "prisma": {
    "schema": "db/schema.prisma",
    "seed": "npx ts-node db/seed.ts"
  },
  "dependencies": {
    "@reach/dialog": "^0.17.0",
    "@remix-run/node": "^1.6.7",
    "@remix-run/react": "^1.6.7",
    "@remix-run/serve": "^1.6.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.4.0",
    "@prisma/client": "^4.2.1",
    "@remix-run/dev": "^1.6.7",
    "@remix-run/eslint-config": "^1.6.7",
    "@remix-validated-form/with-zod": "^2.0.1",
    "@tailwindcss/typography": "^0.5.4",
    "@types/bcryptjs": "^2.4.2",
    "@types/datejs": "^0.0.32",
    "@types/inflection": "^1.13.0",
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "bcryptjs": "^2.4.3",
    "cypress": "^10.6.0",
    "daisyui": "^2.24.0",
    "dayjs": "^1.11.5",
    "eslint": "^8.11.0",
    "eslint-plugin-prettier": "^4.0.0",
    "i": "^0.3.7",
    "inflection": "^1.13.2",
    "npm": "^8.18.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.2",
    "prettier-plugin-tailwindcss": "^0.1.8",
    "prisma": "^4.2.1",
    "remix-validated-form": "^4.5.5",
    "tailwindcss": "^3.0.24",
    "typescript": "^4.5.5",
    "yup": "^0.32.11",
    "zod": "^3.18.0",
    "zod-form-data": "^1.2.1"
  },
  "engines": {
    "node": ">=14"
  }
}
